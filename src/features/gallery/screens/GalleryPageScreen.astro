---
import GalleryCarousel from '../components/GalleryCarousel';
import ch1 from '@/assets/Cheryl1.jpg';
import ch2 from '@/assets/Cheryl2.jpg';
import ch3 from '@/assets/Cheryl3.jpg';
import ch4 from '@/assets/Cheryl4.jpg';
import eth1 from '@/assets/ETH_Capetown.jpg';
import eth2 from '@/assets/ETHCAP2.jpg';
import eth3 from '@/assets/Ethcap3.jpg';
import droid1 from '@/assets/droidcon1.jpg';
import droid2 from '@/assets/droidcon2.jpg';
import droid3 from '@/assets/droidcon3.jpg';
import papi from '@/assets/PAPI DEMO.png';
import web3 from '@/assets/Web3wayafrica_website.png';
import ink from '@/assets/ink-builders-kisumu.jpeg';

interface GalleryItem {
  src: string;
  title: string;
  description: string;
}

const galleryItems: GalleryItem[] = [
  { src: String(eth1), title: 'ETH Cape Town', description: 'Highlights from ETH Cape Town — talks, networking and community standouts.' },
  { src: String(droid1), title: 'Droidcon Nairobi', description: 'Key moments from Droidcon — talks and demos.' },
  { src: String(web3), title: 'Web3wayafrica Website', description: 'Screenshot / preview of the Web3wayafrica site.' },
  { src: String(papi), title: 'PAPI Demo', description: 'Demo screenshots from the PAPI project.' },
  { src: String(ink), title: 'Ink Builders Kisumu', description: 'Community workshop and collaboration in Kisumu.' },
  { src: String(ch1), title: 'Portrait (1)', description: 'Portrait — behind the scenes.' },
];
---

  <div class="container mx-auto px-4">
  <h1 class="text-4xl font-bold mb-8 text-center">Gallery</h1>

  <!-- Render six cards as a React island (grid layout) to match requested 6 cards -->
  <GalleryCarousel client:load items={galleryItems.slice(0, 6)} layout="grid" />
</div>