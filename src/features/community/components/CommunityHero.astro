---
import { Card, CardContent } from "@/components/ui/card";

const quote = "Community is not bs!";
---

<div class="relative py-20 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-background/50 to-muted/50"></div>
  <div class="container mx-auto px-4 relative">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/70">
        Community Work
      </h1>
      <p class="text-2xl md:text-3xl font-medium text-muted-foreground italic">
        "{quote}"
      </p>
    </div>
  </div>
</div>