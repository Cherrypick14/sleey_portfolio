---
import { Carousel, CarouselContent, CarouselItem, CarouselPrevious, CarouselNext } from "@/components/ui/carousel";
import { Card, CardContent } from "@/components/ui/card";

interface CommunityItem {
  imageUrl: string;
  title: string;
  description: string;
}

const communityItems: CommunityItem[] = [
  {
    imageUrl: "/path/to/community1.jpg",
    title: "Community Event 1",
    description: "Description of community event 1"
  },
  {
    imageUrl: "/path/to/community2.jpg",
    title: "Community Event 2",
    description: "Description of community event 2"
  },
  // Add more items as needed
];
---

<div class="container mx-auto px-4">
  <h1 class="text-4xl font-bold mb-8 text-center">Community</h1>
  
  <div class="max-w-4xl mx-auto mb-12 text-center">
    <p class="text-lg text-muted-foreground">
      Join our vibrant community and be part of something special. Together we create, learn, and grow.
    </p>
  </div>

  <Carousel
    opts={{
      align: "start",
      loop: true,
    }}
    class="w-full"
  >
    <CarouselContent>
      {communityItems.map((item) => (
        <CarouselItem class="md:basis-1/2 lg:basis-1/3">
          <div class="p-1">
            <Card>
              <CardContent class="flex flex-col aspect-square items-center justify-center p-6">
                <img 
                  src={item.imageUrl} 
                  alt={item.title}
                  class="w-full h-48 object-cover rounded-t-lg"
                />
                <div class="p-4">
                  <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
                  <p class="text-muted-foreground">{item.description}</p>
                </div>
              </CardContent>
            </Card>
          </div>
        </CarouselItem>
      ))}
    </CarouselContent>
    <CarouselPrevious />
    <CarouselNext />
  </Carousel>
</div>